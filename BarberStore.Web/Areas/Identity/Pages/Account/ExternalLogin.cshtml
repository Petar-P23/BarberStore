@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "External Login";
    Layout = "_AuthLayout";
}

<div class="form">
    <h1>Associate your @Model.ProviderDisplayName account.</h1>
    <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">

    <div class="row">
            <div style="width: 400px; padding-top: 30px; ">
                <p style="font-size: 18pt;">
                    You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
                    Please enter an email address and your name for this site below and click the Register button to finish
                    logging in.
                </p>
                <input type="submit" class="submit" value="Register" style="margin: auto;">
            </div>
            <div>

                <div asp-validation-summary="ModelOnly" class="validation-div text-danger"></div>

                <label asp-for="Input.Email" class="form-label"></label>
                <input asp-for="Input.Email" class="form-control" autocomplete="email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>

                <label asp-for="Input.FirstName" class="form-label"></label>
                <input asp-for="Input.FirstName" class="form-control" autocomplete="email" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>

                <label asp-for="Input.LastName" class="form-label"></label>
                <input asp-for="Input.LastName" class="form-control" autocomplete="email" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>

            </div>
    </div>
        </form>
</div>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
