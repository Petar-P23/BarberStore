@model IEnumerable<BarberStore.Core.Models.Appointments.ServiceModel>
@{
    ViewData["Title"] = "Services";
}
<header>
    <h1>Services and Prices</h1>
</header>
<div class="services">
    @foreach (var service in Model)
    {
        <div class="service">
            <h3>@service.Name - @service.Price</h3>
            <p>
                @service.Description
                @if (User.IsInRole("Admin"))
                {
                    <a asp-area="Administration" asp-controller="Content" asp-action="RemoveService" asp-route-id="@service.Id" asp-route-returnUrl="/Home/Services">X</a>
                }
            </p>
        </div>
    }
</div>
@section Css
{
<link rel="stylesheet" href="~/css/services-styles.css">
}
